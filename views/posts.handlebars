
<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
 
  <p>Created by {{writer.name}} on {{format_date date_created}}</p>
  
</div>

<form class="form new-project-form">
<div class="form-group">
{{!-- input form for adding a comment --}}
{{!-- input type=tex, submit button make a new javascript file with event handlers --}}
 <label id='comment-name'for="comment">Comment:</label>
  <input class="form-input" type="text" id="comment-descr" />
  <div class="form-group">
  <button class="btn btn-primary submit-button" type="submit">submit</button>
  </div>
  
</div>
</form>

  {{#if comments.length}}
  <div class="col-md-6 project-list">
   

    {{#each comments as |comment|}}
    {{!-- renders comments --}}
    <div class="row mb-2 ">
      <div class="col-md-8">
         <h6>{{comment.description}}</h6> 
      </div> 
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger dlt-button" data-id="{{comment.id}}">DELETE</button>
      </div>
       <p>Created by user {{comments.writer.id}} on {{format_date date_created}}</p>
    </div>

    {{/each}}
  </div>
  {{/if}}


</div>

<script src="../js/comment.js"></script>