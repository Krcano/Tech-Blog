{{!-- Displys update post form --}}

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update a post:</h3>

    <form class="form new-post">
      <div class="form-group">
        <label for="post-name">post name:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      
      <div class="form-group">
        <label for="post-desc">description:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" id="update" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
{{!-- displays updates posts but not working --}}
  {{#each updatedPosts as |post| }}
<div  class="row mb-4 project new-project-form" data-id="{{post.id}}">
  <div class="col-md-5">
    <h2>
      <!-- a tag allows you to go to the page /posts/<postid>-->
      <a id="post-name" href="/posts/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>Created by {{post.writer.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p id="post-desc">
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
<script src="/js/updatepost.js"></script>